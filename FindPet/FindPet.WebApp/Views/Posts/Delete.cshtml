@model FindPet.Core.Post

@{
    ViewData["Title"] = "Delete";
}

<h3>Ви впевнені, що хочете видалити це оголошення?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Статус</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class = "col-sm-2">Опис</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class = "col-sm-2">Місцезнаходження</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt class="col-sm-2">Фото</dt>
        <dd class="col-sm-10">
            <img src="@("~/Photos/"+Model.Photo)" asp-append-version="true" width="150px" height="150px"/>
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Назад</a>
    </form>
</div>
