@model FindPet.Core.Post

@{
    ViewData["Title"] = "Edit";
}

<h4>Редагувати Оголошення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPost" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3" style="margin-top:1%">
                <label class="input-group-text" for="inputGroupSelect01">Status</label>
                <select class="form-select" id="inputGroupSelect01" asp-for="Status">
                    <option value="Знайдено" selected>Знайдено</option>
                    <option value="Загублено">Загублено</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />               
            </div>
            <div class="form-group" style="margin-top:4%">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />               
            </div>
            <div style="margin-top:5%">
                <label class="control-label">Current Photo</label>
                <label class="control-label">@Model.Photo</label>  
            </div>
            <div class="input-group mb-3" style="margin-top:7%">
                <input asp-for="PhotoFile" type="file" class="form-control">
            </div>
            <div class="form-group">
                <input asp-for="Username" class="form-control" type="hidden" value="@User.Identity.Name.ToString()" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" style="margin-top:1%"><i class="bi bi-box-arrow-left"></i>&nbspНазад</a>
</div>
